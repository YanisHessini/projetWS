{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": [
      "vue",
      "vite/client",
      "vite-plugin-pages/client",
      "unplugin-icons/types/vue"
    ],
    "paths": {
      "/src/*": ["src/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
